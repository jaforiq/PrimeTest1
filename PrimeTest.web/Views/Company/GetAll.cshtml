@{
}

@model List<PrimeTechTest.DTOs.CompanyDto>

<h1>All Company</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>CompanyUniqueId</th>
            <th>Name</th>
            <th>Address</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.Id</td>
                <td>@company.CompanyUniqueId</td>
                <td>@company.Name</td>
                <td>@company.Address</td>
                <td>
                    <a class="btn btn-primary" a asp-controller="Company" asp-action="Edit" asp-route-id="@company.Id">Edit</a>
                </td>
            </tr>
        }       
    </tbody>
</table>